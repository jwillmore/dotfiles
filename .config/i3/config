####-BRIGHTNESSCTL-####

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10% && notify-send " Brightness up" # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%- && notify-send " Brightness down" # decrease screen brightness

bindsym Shift+F10 exec --no-startup-id brightnessctl set +10% && notify-send " Brightness up" # increase screen brightness
bindsym Shift+F9 exec --no-startup-id brightnessctl set 10%- && notify-send " Brightness down" # decrease screen brightness

