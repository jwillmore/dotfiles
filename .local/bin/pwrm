#!/bin/bash
#
# PowerMenu Script

DMENU="dmenu -fn NotoSans -nb #282828 -sf #d5c4a1 -sb #689d6a -nf #d5c4a1 -h 25 -p PowerMenu"
choice=$(echo -e "logout\nshutdown\nreboot\nsuspend" | $DMENU)

case "$choice" in
  logout) i3-msg exit & ;;
  shutdown) poweroff & ;;
  reboot) reboot ;;
  suspend) systemctl suspend & ;;
esac
